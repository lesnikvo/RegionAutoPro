<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/closeWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RoundedCornerButtonDay" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/btn_rounded</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundColor">@color/closeWhite</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="RoundedCornerButtonNight" parent="@style/RoundedCornerButtonDay">
        <item name="background">@drawable/btn_rounded</item>
        <item name="backgroundColor">@color/darkGray</item>
        <item name="android:textColor">@color/closeWhite</item>
    </style>

    <style name="CivilTextDay" parent="@style/Widget.AppCompat.TextView">
        <item name="background">@drawable/text_rounded_civil</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="CivilTextNight" parent="@style/Widget.AppCompat.TextView">
        <item name="background">@drawable/text_rounded_civil_night</item>
        <item name="android:textColor">@color/closeWhite</item>
    </style>

    <style name="PoliceTextDay" parent="@style/Widget.AppCompat.TextView">
        <item name="background">@drawable/text_rounded_police</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="PoliceTextNight" parent="@style/Widget.AppCompat.TextView">
        <item name="background">@drawable/text_rounded_police_night</item>
        <item name="android:textColor">@color/closeWhite</item>
    </style>

    <style name="ArmyTextDay" parent="@style/Widget.AppCompat.TextView">
        <item name="background">@drawable/text_rounded_army</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="ArmyTextNight" parent="@style/Widget.AppCompat.TextView">
        <item name="background">@drawable/text_rounded_army_night</item>
        <item name="android:textColor">@color/closeWhite</item>
    </style>

    <style name="DipTextDay" parent="@style/Widget.AppCompat.TextView">
        <item name="background">@drawable/text_rounded_dip</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="DipTextNight" parent="@style/Widget.AppCompat.TextView">
        <item name="background">@drawable/text_rounded_dip_night</item>
        <item name="android:textColor">@color/closeWhite</item>
    </style>

</resources>